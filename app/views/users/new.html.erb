<h1>Sign Up</h1>

<%= form_with model: @user, local: true do |form| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
        <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

  <div>
    <%= form.label :username %>
    <p></p>
    <%= form.text_field :username %>
  </div>
  
  <div>
    <%= form.label :email %>
    <p></p>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %>
    <p></p>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "Sign Up" %>
  </div>

<% end %>
